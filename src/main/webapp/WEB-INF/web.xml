<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!--                      ===== SERVLETS ====               -->

    <!-- mapping LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/web/login</url-pattern>
    </servlet-mapping>

    <!-- mapping SessionManager -->
    <servlet>
        <servlet-name>SessionManager</servlet-name>
        <servlet-class>web.servlet.SessionManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionManager</servlet-name>
        <url-pattern>/web/sessionmanager.html</url-pattern>
    </servlet-mapping>

    <!--                      ===== JSP's ====               -->

    <!-- mapping IndexJSP -->
    <servlet>
        <servlet-name>LoginJSP</servlet-name>
        <jsp-file>/WEB-INF/jsp/public/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginJSP</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- mapping WelcomeJSP -->
    <servlet>
        <servlet-name>HomeJSP</servlet-name>
        <jsp-file>/WEB-INF/jsp/secret/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeJSP</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- mapping JokeOneJSP -->
    <servlet>
        <servlet-name>JokeOneJSP</servlet-name>
        <jsp-file>/WEB-INF/jsp/jokes/JokeOne.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>JokeOneJSP</servlet-name>
        <url-pattern>/secret/jokeone.html</url-pattern>
    </servlet-mapping>

    <!-- mapping JokeTwoJSP -->
    <servlet>
        <servlet-name>JokeTwoJSP</servlet-name>
        <jsp-file>/WEB-INF/jsp/jokes/JokeTwo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>JokeTwoJSP</servlet-name>
        <url-pattern>/secret/joketwo.html</url-pattern>
    </servlet-mapping>

    <!-- mapping JokeThreeJSP -->
    <servlet>
        <servlet-name>JokeThreeJSP</servlet-name>
        <jsp-file>/WEB-INF/jsp/jokes/JokeThree.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>JokeThreeJSP</servlet-name>
        <url-pattern>/secret/jokethree.html</url-pattern>
    </servlet-mapping>

    <!-- mapping JokeFourJSP -->
    <servlet>
        <servlet-name>JokeFourJSP</servlet-name>
        <jsp-file>/WEB-INF/jsp/jokes/JokeFour.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>JokeFourJSP</servlet-name>
        <url-pattern>/secret/jokefour.html</url-pattern>
    </servlet-mapping>

    <!--                      ===== HTML files ====               -->

    <!-- mapping header.html -->
    <servlet>
        <servlet-name>HeaderHTML</servlet-name>
        <jsp-file>/WEB-INF/html/header.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>HeaderHTML</servlet-name>
        <url-pattern>/html/header.html</url-pattern>
    </servlet-mapping>

    <!-- mapping footer.html -->
    <servlet>
        <servlet-name>FooterHTML</servlet-name>
        <jsp-file>/WEB-INF/html/footer.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FooterHTML</servlet-name>
        <url-pattern>/html/footer.html</url-pattern>
    </servlet-mapping>

    <!--                      ===== FILTERS ====               -->

    <!-- Mapping for the LoginFilter -->
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>web.filter.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Mapping for the SessionFilter -->
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>web.filter.SessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/secret/*</url-pattern>
    </filter-mapping>
</web-app>

