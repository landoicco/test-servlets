<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!-- mapping LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/web/login.html</url-pattern>
    </servlet-mapping>

    <!-- mapping SessionManager -->
    <servlet>
        <servlet-name>SessionManager</servlet-name>
        <servlet-class>web.servlet.SessionManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionManager</servlet-name>
        <url-pattern>/web/sessionmanager.html</url-pattern>
    </servlet-mapping>

    <!-- mapping IndexJSP -->
    <servlet>
        <servlet-name>LoginJSP</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginJSP</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- mapping WelcomeJSP -->
    <servlet>
        <servlet-name>WelcomeJSP</servlet-name>
        <jsp-file>/WEB-INF/jsp/welcome.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeJSP</servlet-name>
        <url-pattern>/welcome.html</url-pattern>
    </servlet-mapping>

    <!-- mapping header.html -->
    <servlet>
        <servlet-name>HeaderHTML</servlet-name>
        <jsp-file>/WEB-INF/html/header.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>HeaderHTML</servlet-name>
        <url-pattern>/html/header.html</url-pattern>
    </servlet-mapping>

    <!-- mapping footer.html -->
    <servlet>
        <servlet-name>FooterHTML</servlet-name>
        <jsp-file>/WEB-INF/html/footer.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FooterHTML</servlet-name>
        <url-pattern>/html/footer.html</url-pattern>
    </servlet-mapping>

    <!-- Mapping for the LoginFilter -->
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>web.filter.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Mapping for the SessionFilter -->
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>web.filter.SessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/welcome.html</url-pattern>
    </filter-mapping>
</web-app>

